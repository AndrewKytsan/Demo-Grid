{%- assign ss = section.settings -%}
<div class="grid-section" style="background-color: {{ ss.bg }};">
	<div class="grid-section__container">
		{%- if ss.title != blank -%}
			<h2 class="grid-section__title" style="color: {{ ss.title_cl }};">
				{{ ss.title }}
			</h2>
		{%- endif -%}
		{%- if ss.subtitle != blank -%}
			<div class="grid-section__subtitle" style="color: {{ ss.subtitle_cl }};">
				{{ ss.subtitle }}
			</div>
		{%- endif -%}
		{%- if section.blocks.size > 0 -%}
			<div class="grid-section__wrapper">
				{%- for block in section.blocks -%}
					{%- assign bs = block.settings -%}
					<div class="grid-section__cell">
						<div class="grid-section__cell--heading" style="background-color: {{ bs.heading_bg }};">
							{%- if bs.icon -%}
								<img
									src="{{ bs.custom_icon | image_url: width: 25, height: 50 }}"
									alt="{{ bs.custom_icon.alt }}"
									width="20"
									height="40"
									loading="lazy"
								>
							{%- else -%}
								<svg
									fill="#ffffff"
									width="20"
									height="50"
									version="1.1"
									id="Capa_1"
									xmlns="http://www.w3.org/2000/svg"
									xmlns:xlink="http://www.w3.org/1999/xlink"
									viewBox="0 0 111.577 111.577"
									xml:space="preserve"
								>
