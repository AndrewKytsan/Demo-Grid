									</g>
								</svg>
							{%- endif -%}
						</div>
						<div class="grid-section__cell--main" style="background-color: {{ bs.main_bg }};">
							<h3 class="grid-section__cell--title" style="color: {{ bs.title_cl }};">
								{{ bs.title }}
							</h3>
							<div class="grid-section__cell--subtitle" style="height: 45px;">
								<div
									class="grid-section__cell--subtitle-inner"
									style="color: {{ bs.subtitle_cl }};"
								>
									{{ bs.subtitle }}
								</div>
							</div>
							<button
								x-data="expand"
								class="grid-section__cell--expand"
								@click="toggle"
								style="background-color: {{ bs.expand_bg_color }}; color: {{ bs.title_cl }};"
							>
								+
							</button>
						</div>
					</div>
				{%- endfor -%}
			</div>
		{%- endif -%}
	</div>
</div>
{% schema %}
{
	"name": "grid-section",
	"tag": "section",
	"settings": [
		{
			"type": "color",
			"id": "bg",
			"label": "Background color",
			"default": "#1c2026"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Experienced & Multi-Talented"
		},
		{
			"type": "color",
			"id": "title_cl",
			"label": "Title color",
			"default": "#ffffff"
		},
		{
			"type": "richtext",
			"id": "subtitle",
			"label": "Subtitle",
			"default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam tortor leo, porttitor vel dictum at, aliquam et augue. Duis vel molestie risus, ut lobortis felis.</p>"
		},
		{
			"type": "color",
			"id": "subtitle_cl",
			"label": "Subtitle color",
			"default": "#65757e"
		}
	],
	"max_blocks": 8,
	"blocks": [
		{
			"type": "cell",
			"name": "Cell",
			"settings": [
				{
					"type": "color",
					"id": "heading_bg",
					"label": "Heading Background color",
					"default": "#56655f"
				},
				{
					"type": "color",
					"id": "main_bg",
					"label": "Main Background color",
					"default": "#000000"
				},
				{
					"type": "image_picker",
					"id": "custom_icon",
					"label": "Custom icon"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Title",
					"default": "Block"
				},
				{
					"type": "color",
					"id": "title_cl",
					"label": "Title color",
					"default": "#ffffff"
				},
				{
					"type": "richtext",
					"id": "subtitle",
					"label": "Subtitle",
					"default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut vestibulum eros nisi, eu sagittis nisl feugiat quis.</p>"
				},
				{
					"type": "color",
					"id": "subtitle_cl",
					"label": "Subtitle color",
					"default": "#65757e"
				},
				{
					"type": "color",
					"id": "expand_bg_color",
					"label": "Expand background color",
					"default": "#1b1f26"
				}
			]
		}
	],
	"presets": [
		{
			"name": "grid-section",
			"settings": {}
		}
	]
}
{% endschema %}
